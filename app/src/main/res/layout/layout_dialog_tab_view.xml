<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius_TL="@dimen/dp_10"
    app:rv_cornerRadius_TR="@dimen/dp_10"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@id/rlChatGifOrdinary"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_38"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvTabOrdinary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/live_chat_ordinary"
            android:textColor="@color/text_red_tab"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@id/roundOrdinaryLine"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_below="@+id/tvTabOrdinary"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            app:rv_backgroundColor="@color/text_red_tab"
            app:rv_backgroundPressColor="@color/text_red_tab"
            app:rv_cornerRadius="@dimen/dp_2"
            app:rv_strokeColor="@color/text_red_tab" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rlChatTabConfession"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_38"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvTabConfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/live_chat_confession"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@id/roundConfessionLine"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_below="@+id/tvTabConfession"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:rv_backgroundColor="@color/text_red_tab"
            app:rv_backgroundPressColor="@color/text_red_tab"
            app:rv_cornerRadius="@dimen/dp_2"
            app:rv_strokeColor="@color/text_red_tab" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@id/rlChatTabLottery"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_38"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvTabLottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/live_chat_lottery_ticket"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@id/roundLotteryLine"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_below="@+id/tvTabLottery"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:rv_backgroundColor="@color/text_red_tab"
            app:rv_backgroundPressColor="@color/text_red_tab"
            app:rv_cornerRadius="@dimen/dp_2"
            app:rv_strokeColor="@color/text_red_tab" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_38"
        android:orientation="vertical">

        <TextView
           android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="节日"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
             android:id="@+id/lin4"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_below="@+id/tv4"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:rv_backgroundColor="@color/text_red_tab"
            app:rv_backgroundPressColor="@color/text_red_tab"
            app:rv_cornerRadius="@dimen/dp_2"
            app:rv_strokeColor="@color/text_red_tab" />
    </RelativeLayout>

    <RelativeLayout
     android:id="@+id/rl5"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_38"
        android:orientation="vertical">

        <TextView
           android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="趣味"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/lin5"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_4"
            android:layout_below="@+id/tv5"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:visibility="gone"
            app:rv_backgroundColor="@color/text_red_tab"
            app:rv_backgroundPressColor="@color/text_red_tab"
            app:rv_cornerRadius="@dimen/dp_2"
            app:rv_strokeColor="@color/text_red_tab" />
    </RelativeLayout>
</LinearLayout>