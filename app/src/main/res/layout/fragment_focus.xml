<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.fenghuang.caipiaobao.ui.widget.RankingTabView
        android:id="@+id/concernTabView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f2f2f6"
        app:layout_constraintBottom_toBottomOf="@+id/concernTabView" />

    <com.google.android.material.widget.XViewPager
        android:id="@+id/concernViewPager"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lines" />

</androidx.constraintlayout.widget.ConstraintLayout>