<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/start_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/player_shape_play_bg"
        android:contentDescription="@null"
        android:padding="@dimen/dp_10"
        android:src="@drawable/player_selector_play_button" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/player_progress_loading"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/dp_4"
        android:contentDescription="@null"
        android:src="@drawable/player_ic_action_close" />

    <ImageView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:contentDescription="@null"
        android:src="@drawable/ic_player_action_fullscreen"
        android:visibility="gone" />

</FrameLayout>