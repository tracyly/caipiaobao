<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:baselineAligned="false"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/linRecharge"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center"
            android:background="@mipmap/ic_mine_wallet"
            android:contentDescription="@string/app_name"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/mine_deposit"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@mipmap/ic_mine_take_money"
            android:contentDescription="@string/app_name"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/mine_draw_money"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center"
            android:background="@mipmap/ic_mine_vip_info"
            android:contentDescription="@string/app_name"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/mine_vip_info"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            tools:ignore="NestedWeights" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/mine_wallet"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_2"
                android:layout_toEndOf="@+id/tv_wallet"
                android:background="@mipmap/ic_mine_refresh"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>