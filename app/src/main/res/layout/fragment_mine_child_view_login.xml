<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:baselineAligned="false"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/linRecharge"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center"
            android:background="@mipmap/ic_mine_wallet"
            android:contentDescription="@string/app_name"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/mine_deposit"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linDrawMoney"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@mipmap/ic_mine_take_money"
            android:contentDescription="@string/app_name"
            tools:ignore="NestedWeights" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/mine_draw_money"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linBalance"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        tools:ignore="UseCompoundDrawables">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_46"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ï¿¥"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/tvUserBalance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_46"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_333333"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBalcnce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/mine_balances"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/imgBalance"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toEndOf="@+id/tvBalcnce"
                android:background="@mipmap/ic_mine_refresh"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linChangeDiamond"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20">

        <TextView
            android:id="@+id/tvUserDiamond"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_46"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            tools:ignore="NestedWeights" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/mine_diamond"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/imgDiamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toEndOf="@+id/tv_wallet"
                android:background="@mipmap/ic_ming_add"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>