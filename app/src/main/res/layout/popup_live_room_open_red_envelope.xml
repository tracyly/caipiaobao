<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@id/rlOpenRed"
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivOpenRedEnvelope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_live_chat_open_red_envelope"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@id/ivOpenRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_live_chat_open_red"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_48"
            android:text="@string/live_chat_open_red_hin"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <LinearLayout
        android:id="@id/layoutOpenRedMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@id/ivRedDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/ic_live_chat_red_delete"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@id/ivOpenRedResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_live_chat_open_result"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@id/ivOpenRedLogo"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_66"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_96"
                android:src="@mipmap/ic_live_chat_open_red"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@id/tvRedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivOpenRedLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_fdd638"
                android:textSize="@dimen/sp_14"
                tools:text="鸵鸟MMP" />

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRedName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16">

                <View
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center"
                    android:background="@color/white" />

                <TextView
                    android:id="@id/tvRedContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_6"
                    android:paddingEnd="@dimen/dp_6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    tools:text="傻逼！曹尼玛！" />

                <View
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llContent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_14">

                <TextView
                    android:id="@id/tvRedMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_fdd638"
                    android:textSize="@dimen/sp_66"
                    tools:text="888" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="@string/live_chat_open_red_yuan"
                    android:textColor="@color/color_fdd638"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llMoney"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/live_chat_open_red_obtain"
                android:textColor="@color/color_fdd638"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>