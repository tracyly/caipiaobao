<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_218"
        android:background="@mipmap/ic_home_anchor_information_bg"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@id/ivAnchorBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_34"
            android:paddingStart="@dimen/dp_16"
            android:src="@drawable/ic_player_action_arrow_back"
            tools:ignore="ContentDescription,RtlSymmetry" />

        <com.fenghuang.baselib.widget.round.RoundRelativeLayout
            android:id="@id/anchorLiveStatusLayout"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_60"
            app:rv_backgroundColor="@color/white"
            app:rv_backgroundPressColor="@color/white"
            android:visibility="gone"
            app:rv_cornerRadius_BL="@dimen/dp_10"
            app:rv_cornerRadius_TL="@dimen/dp_10"
            tools:ignore="RtlHardcoded">

            <com.fenghuang.caipiaobao.widget.gif.GifImageView
                android:id="@id/ivAnchorLiveStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"
                android:src="@drawable/ic_home_live_gif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_toEndOf="@id/ivAnchorLiveStatus"
                android:text="@string/live_anchor_room"
                android:textColor="@color/color_FF513E"
                android:textSize="@dimen/sp_12" />
        </com.fenghuang.baselib.widget.round.RoundRelativeLayout>
    </RelativeLayout>

    <com.fenghuang.baselib.widget.round.RoundFrameLayout
        android:id="@id/cvAnchor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_156"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_124"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:rv_backgroundColor="@color/white"
        app:rv_backgroundPressColor="@color/white"
        app:rv_cornerRadius="@dimen/dp_6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_32"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tvAnchorUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                tools:text="小心沙雕" />

            <com.fenghuang.baselib.widget.round.RoundLinearLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_4"
                app:rv_backgroundColor="@color/color_5393f8"
                app:rv_backgroundPressColor="@color/color_5393f8"
                app:rv_cornerRadius="@dimen/dp_12">

                <ImageView
                    android:id="@id/ivAnchorSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_4"
                    android:src="@mipmap/ic_home_anchor_man"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@id/tvAnchorAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold"
                    tools:text="24" />
            </com.fenghuang.baselib.widget.round.RoundLinearLayout>

            <ImageView
                android:id="@id/ivAnchorVip"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_6"
                android:src="@mipmap/ic_live_chat_vip1"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:id="@id/tvAnchorSignature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            tools:text="小心沙雕！堤防小人！小心沙雕！堤防小人！小心沙雕！堤防小人！" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_24"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tvAnchorAttention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                tools:text="5" />

            <TextView
                android:id="@id/tvAnchorAttentionHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_toEndOf="@+id/tvAnchorAttention"
                android:text="@string/home_anchor_attention"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@id/tvAnchorFan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toEndOf="@id/tvAnchorAttentionHint"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                tools:text="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_toEndOf="@id/tvAnchorFan"
                android:text="@string/home_anchor_fan"
                android:textSize="@dimen/sp_12"
                tools:ignore="RelativeOverlap" />

            <com.fenghuang.baselib.widget.round.RoundTextView
                android:id="@id/tvAnchorAddAttention"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_26"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/home_anchor_attention"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:rv_backgroundColor="@color/color_FF513E"
                app:rv_cornerRadius="@dimen/dp_26" />
        </RelativeLayout>
    </com.fenghuang.baselib.widget.round.RoundFrameLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_74"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@id/ivAnchorLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/color_f7f7f7"
            tools:ignore="ContentDescription" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@color/color_FF513E"
            android:gravity="center"
            android:text="@string/live_tab_anchor"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            app:rv_backgroundColor="@color/color_FF513E"
            app:rv_backgroundPressColor="@color/color_FF513E"
            app:rv_cornerRadius_BR="@dimen/dp_8"
            app:rv_cornerRadius_TL="@dimen/dp_8" />
    </RelativeLayout>


    <com.fenghuang.caipiaobao.ui.widget.AnchorTabView
        android:id="@id/anchorTabView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toBottomOf="@id/cvAnchor" />

    <com.google.android.material.widget.XViewPager
        android:id="@id/viewPager"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anchorTabView" />

    <com.fenghuang.baselib.widget.placeholder.PlaceholderView
        android:id="@id/placeholder"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anchorTabView" />

</androidx.constraintlayout.widget.ConstraintLayout>