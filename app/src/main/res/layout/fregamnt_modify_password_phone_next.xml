<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linPassSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etPhoneNewPass11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            tools:ignore="RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f5f5f5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etNewPass11Sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:background="@null"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>


    <com.fenghuang.baselib.widget.round.RoundTextView
        android:id="@+id/btModify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_34"
        android:gravity="center"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:rv_backgroundColor="@color/color_FF513E"
        app:rv_cornerRadius="@dimen/dp_24" />

</LinearLayout>