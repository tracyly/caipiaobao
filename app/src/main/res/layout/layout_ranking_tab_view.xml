<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@id/rlRankingTabLeft"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_38"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvTabLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ranking_tab_anchor"
            android:textColor="@color/text_red_tab"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@id/roundLeftLine"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:rv_backgroundColor="@color/text_red_tab"
            app:rv_backgroundPressColor="@color/text_red_tab"
            app:rv_cornerRadius="@dimen/dp_2"
            app:rv_strokeColor="@color/text_red_tab" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rlRankingTabRight"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_38"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvTabRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ranking_tab_expert"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@id/roundRightLine"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:rv_backgroundColor="@color/text_red_tab"
            app:rv_backgroundPressColor="@color/text_red_tab"
            app:rv_cornerRadius="@dimen/dp_2"
            app:rv_strokeColor="@color/text_red_tab" />
    </RelativeLayout>

</LinearLayout>