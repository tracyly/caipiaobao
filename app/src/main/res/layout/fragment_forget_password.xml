<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linReset1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_54"
            android:background="@mipmap/ic_login_logo"
            android:contentDescription="@string/app_name" />

        <com.fenghuang.baselib.widget.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_62"
            android:layout_marginEnd="@dimen/dp_36"
            android:gravity="center_vertical"
            app:rv_backgroundColor="@color/color_f6f6f6"
            app:rv_cornerRadius="@dimen/dp_7">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@mipmap/ic_login_phone"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/color_CCCCCC" />

            <EditText
                android:id="@+id/etForgetPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_14"
                android:background="@null"
                android:hint="@string/login_enter_phone"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="@dimen/sp_12"
                tools:ignore="TextFields" />
        </com.fenghuang.baselib.widget.round.RoundLinearLayout>


        <com.fenghuang.baselib.widget.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_36"
            android:gravity="center_vertical"
            app:rv_backgroundColor="@color/color_f6f6f6"
            app:rv_cornerRadius="@dimen/dp_7">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@mipmap/ic_login_safe"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/color_CCCCCC" />

            <EditText
                android:id="@+id/etForgetIdentifyCode"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_weight="2"
                android:background="@null"
                android:hint="@string/login_enter_identify_code"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/black"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tvForgetGetIdentifyCode"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_6"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/login_send_identify_code"
                android:textColor="@color/color_FF513E"
                android:textSize="@dimen/sp_12" />
        </com.fenghuang.baselib.widget.round.RoundLinearLayout>


        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/btResetPassWord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_34"
            android:gravity="center"
            android:text="重置密码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:rv_backgroundColor="@color/color_FF513E"
            app:rv_cornerRadius="@dimen/dp_24" />


        <TextView
            android:id="@+id/tvGoFuckContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_18"
            android:text="@string/mine_contact_customer"
            android:textColor="@color/color_FF513E"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linReset2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_54"
            android:background="@mipmap/ic_login_logo"
            android:contentDescription="@string/app_name" />

        <com.fenghuang.baselib.widget.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_62"
            android:layout_marginEnd="@dimen/dp_36"
            android:gravity="center_vertical"
            app:rv_backgroundColor="@color/color_f6f6f6"
            app:rv_cornerRadius="@dimen/dp_7">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@mipmap/ic_login_phone"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/color_CCCCCC" />

            <TextView
                android:id="@+id/tvForgetPhoneNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_14"
                android:gravity="center_vertical"
                android:textColor="@color/color_CCCCCC"
                android:textSize="@dimen/sp_12"
                tools:ignore="TextFields"
                tools:text="188888888888" />
        </com.fenghuang.baselib.widget.round.RoundLinearLayout>


        <com.fenghuang.baselib.widget.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_36"
            android:gravity="center_vertical"
            app:rv_backgroundColor="@color/color_f6f6f6"
            app:rv_cornerRadius="@dimen/dp_7">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@mipmap/ic_login_lock"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/color_CCCCCC" />

            <EditText
                android:id="@+id/etPassWordReset1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_weight="3.5"
                android:background="@null"
                android:digits="@string/rule_text"
                android:hint="@string/login_enter_password"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@color/black"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="@dimen/sp_12" />


        </com.fenghuang.baselib.widget.round.RoundLinearLayout>

        <com.fenghuang.baselib.widget.round.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_36"
            android:gravity="center_vertical"
            app:rv_backgroundColor="@color/color_f6f6f6"
            app:rv_cornerRadius="@dimen/dp_7">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_22"
                android:background="@mipmap/ic_login_lock"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/color_CCCCCC" />

            <EditText
                android:id="@+id/etPassWordReset2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_weight="3.5"
                android:background="@null"
                android:digits="@string/rule_text"
                android:hint="@string/login_enter_password"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@color/black"
                android:textColorHint="@color/color_CCCCCC"
                android:textSize="@dimen/sp_12" />


        </com.fenghuang.baselib.widget.round.RoundLinearLayout>

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/btResetPassWord2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_34"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:rv_backgroundColor="@color/color_FF513E"
            app:rv_cornerRadius="@dimen/dp_24" />


        <TextView
            android:id="@+id/tvGoFuckContent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_18"
            android:text="@string/mine_contact_customer"
            android:textColor="@color/color_FF513E"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>