<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@id/ivLiveRes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.fenghuang.baselib.widget.round.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLiveRes"
        app:rv_backgroundColor="@color/white"
        app:rv_backgroundPressColor="@color/white"
        app:rv_cornerRadius_BL="@dimen/dp_4"
        app:rv_cornerRadius_BR="@dimen/dp_4">

        <TextView
            android:id="@id/tvLiveListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            tools:text="我是主播我是主播" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:layout_width="@dimen/dp_36"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLiveListTitle"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_8"
            android:drawableStart="@mipmap/ic_mine_watch_history_live"
            android:gravity="center"
            android:paddingStart="@dimen/dp_4"
            android:text="@string/string_live"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8"
            app:rv_backgroundColor="@color/color_B3B3B3"
            app:rv_backgroundPressColor="@color/color_B3B3B3"
            app:rv_cornerRadius="@dimen/dp_2" />
    </com.fenghuang.baselib.widget.round.RoundRelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>