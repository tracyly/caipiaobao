<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">


    <com.fenghuang.baselib.widget.round.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_130"
        android:minHeight="400dp"
        android:paddingTop="@dimen/dp_45"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius_BL="@dimen/dp_10"
        app:rv_cornerRadius_BR="@dimen/dp_10">

        <TextView
            android:id="@+id/titleCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_42"
            android:text="更新内容:"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/upDateContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleCon"
            android:layout_marginStart="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />

        <com.fenghuang.baselib.widget.round.RoundTextView
            android:id="@+id/btUpDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@+id/upDateContent"
            android:layout_marginStart="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_34"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:rv_backgroundColor="@color/color_FF513E"
            app:rv_cornerRadius="@dimen/dp_24" />
    </com.fenghuang.baselib.widget.round.RoundRelativeLayout>

    <com.fenghuang.baselib.widget.round.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        app:rv_backgroundColor="@color/transparent"
        app:rv_cornerRadius_BL="@dimen/dp_10"
        app:rv_cornerRadius_BR="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bc_update"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/upTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_42"
            android:text="版本更新啦！"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/upTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upTitle"
            android:layout_marginStart="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_15"
            android:text="Version update "
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />


    </com.fenghuang.baselib.widget.round.RoundRelativeLayout>
</RelativeLayout>